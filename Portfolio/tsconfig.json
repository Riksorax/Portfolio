{
  "compilerOptions": {
    "noEmitOnError": true, // Fehler verhindern die JS-Ausgabe
    "noImplicitAny": true, // Fehler bei 'any' ohne explizite Angabe
    "strictNullChecks": true, // Strikte Null-Prüfungen
    "sourceMap": true, // Source Maps für Debugging
    "target": "es6", // Ziel-JavaScript-Version (es6 oder höher ist gut für moderne Browser)
    "lib": [ "dom", "es2015" ], // Bibliotheken, die verfügbar sind (DOM für Browser-APIs, es6 für moderne JS-Features)
    "moduleResolution": "node", // <-- Fügen Sie diese Zeile hinzu oder aktualisieren Sie sie
  },
  "exclude": [
    "node_modules",
    "wwwroot/lib" // Schließt externe Bibliotheken aus
  ]
}